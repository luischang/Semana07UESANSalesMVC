@using Semana07UESANSalesMVC.WEB.Areas.Marketing.Models;
@{
    var products = ViewBag.ProductList as IEnumerable<Product>;
}

<h1>@ViewBag.MyName </h1>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <td>Id</td>
            <td>Description</td>
            <td>Title</td>
            <td>Maker</td>
            <td>Image</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in products)
        {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Description</td>
                    <td>
                        <a href="@item.Url" target="_blank">@item.Title</a>
                    </td>
                    <td>@item.Maker</td>
                    <td>
                        <img src="@item.Img" style="height:40px;width:40px;" >
                    </td>
                </tr>

        }

    </tbody>
</table>
